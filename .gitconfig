[core]
	editor = nvim
	autocrlf = false
[user]
	email = justin.luque@gmail.com
	name = Justin Luque
[commit]
	gpgsign = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	unstage = reset HEAD --
	cram = commit --amend --no-edit
[push]
	autoSetupRemote = true
